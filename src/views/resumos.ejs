<!DOCTYPE html>
<html lang="pt-br">

<%- include('partials/head.ejs') %>

<body>
    <%- include('partials/navbar.ejs') %>

    <h1>Lista de Resumos</h1>

    <ul>
    <p> Produtos </p>
        <% if (produtos && produtos.length > 0) { %>
            <% produtos.forEach((produto) => { %>
                <li> 
                    <%= produto.nome %> - <%= produto.marca %> - <%= produto.cod %> - <%= produto.idp %> <br><br>
                </li>
            <% }) %>
        <% } %>
<p> Clientes </p>
        <% if (clientes && clientes.length > 0) { %>
            <% clientes.forEach((cliente) => { %>
                <li> 
                    <%= cliente.nome %> - <%= cliente.cpf %> - <%= cliente.idade %> - <%= cliente.telefone %> - <%= cliente.email %> - <%= cliente.endereco %> <br><br>
                </li>
            <% }) %>
        <% } %>
    </ul>

    <%- include('partials/foot.ejs') %>
</body>

</html>