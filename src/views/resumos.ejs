<!DOCTYPE html>
<html lang="pt-br">

<%- include('partials/head.ejs') %>

<body>
  <%- include('partials/navbar.ejs') %>

  <h1>Lista de Resumos</h1>

  <ul>
    <% resumos.forEach((resumo) => { %>
      <li>
        <% if (resumo.cliente) { %>
          <strong>Cliente:</strong> <%= resumo.cliente.nome %><br>
        <% } %>
        <strong>Produtos:</strong><br>
        <ul>
          <% resumo.produtos.forEach((produto) => { %>
            <li>
              <%= produto.nome %> - <%= produto.marca %> - <%= produto.cod %> - <%= produto.idp %><hr>
            </li>
          <% }) %>
        </ul>
      </li>
    <% }) %>
  </ul>

  <%- include('partials/foot.ejs') %>
</body>

</html>